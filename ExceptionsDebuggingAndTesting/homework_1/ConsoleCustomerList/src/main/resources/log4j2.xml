<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="QueriesFile" fileName="/home/user/IdeaProjects/java_basics/ExceptionsDebuggingAndTesting/homework_1/ConsoleCustomerList/logs/queries.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

        <File name="ErrorsFile" fileName="/home/user/IdeaProjects/java_basics/ExceptionsDebuggingAndTesting/homework_1/ConsoleCustomerList/logs/errors.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ErrorsFile"/>
        </Root>

        <Logger name="MainInput" level="INFO" additivity="false">
            <AppenderRef ref="QueriesFile"/>
        </Logger>

    </Loggers>
</Configuration>
